{% extends 'base.html.twig' %}

{% block title %}Produits index{% endblock %}

{% block body %}
    <h1>Produits index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Prix</th>
                <th>Categorie</th>
                <th>Descriptif</th>
                <th>image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.id }}</td>
                <td>{{ produit.titre }}</td>
                <td>{{ produit.prix }}</td>
                <td>{{ produit.Categorie }}</td>
                <td>{{ produit.descriptif }}</td>

                <td><img src="{{ asset('img/') ~ produit.imagename}}" class="card-img-top" alt="...">
                
                <td>
                    <a href="{{ path('app_admin_produits_show', {'id': produit.id}) }}">show</a>
                    <a href="{{ path('app_admin_produits_edit', {'id': produit.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_produits_new') }}">Create new</a>
{% endblock %}
